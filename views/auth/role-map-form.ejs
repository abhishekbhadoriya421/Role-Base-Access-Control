<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <title>Map Role & Permission</title>
</head>

<body>
    <div class="container mt-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Assign Permission to Role</h4>
            </div>
            <div class="card-body">
                <form action="/role-permissions" method="POST">

                    <!-- Role Dropdown -->
                    <div class="mb-3">
                        <label for="role_id" class="form-label">Select Role <span class="text-danger">*</span></label>
                        <select id="role_id" name="role_id" class="form-select" required>
                            <option value="" disabled selected>-- Choose Role --</option>
                            <% roles.forEach(role=> { %>
                                <option value="<%= role._id %>">
                                    <%= role.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <!-- Permission Dropdown -->
                    <div class="mb-3">
                        <label for="permission_id" class="form-label">Select Permission <span
                                class="text-danger">*</span></label>
                        <select id="permission_id" name="permission_id" class="form-select" required>
                            <option value="" disabled selected>-- Choose Permission --</option>
                            <% permissions.forEach(permission=> { %>
                                <option value="<%= permission._id %>">
                                    <%= permission.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-end">
                        <button type="reset" class="btn btn-outline-secondary me-2">Reset</button>
                        <button type="submit" class="btn btn-primary">Assign</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
</body>

</html>